<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_layout_bg">

    <ImageView
        android:id="@+id/GambarRestoran"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        app:srcCompat="@android:drawable/ic_menu_slideshow" />

    <LinearLayout
        android:id="@+id/KolomDataRestoran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextToShow_NamaRestoran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextToShow_JarakRestoranHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jarak Resto"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TextToShow_MejaTersediaHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meja Tersedia"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextToShow_JamBuka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Buka" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strip" />

            <TextView
                android:id="@+id/TextToShow_JamTutup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

