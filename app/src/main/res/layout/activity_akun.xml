<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coklattua"
    tools:context=".Akun">

    <TableLayout
        android:id="@+id/BottomNavigasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        android:gravity="bottom">

        <TableRow
            android:id="@+id/TombolBottomNavigasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/TombolHome"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tombol_home" />

            <ImageButton
                android:id="@+id/TombolExplore"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tombol_explore" />

            <ImageButton
                android:id="@+id/TombolTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tombol_transaksi" />

            <ImageButton
                android:id="@+id/TombolAkun"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tombol_akun" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/Layout_banner_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AkunSayaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/akun_saya"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_Profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Layout_banner_activity"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/FotoProfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/contoh_foto_profil"
            tools:srcCompat="@drawable/contoh_foto_profil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/NamaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Rizuan"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/NoHP_Pengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08199099"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_below="@+id/Layout_Profil"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/orange"
            android:text="Edit Account"
            android:textAlignment="textStart"
            app:icon="@drawable/icon_navigate_next"
            app:iconGravity="end" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="FAQ"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="HelpCenter"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/term_conditions"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Privacy Policy"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Tombol_LogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:text="Log Out"
            android:textAlignment="center"
            android:textSize="16sp"
            app:icon="@drawable/icon_logout"
            app:iconGravity="textEnd" />

    </LinearLayout>
</RelativeLayout>